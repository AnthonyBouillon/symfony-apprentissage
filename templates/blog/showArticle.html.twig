{% extends 'base.html.twig' %}

{% block title %}Votre article{% endblock %}

{% block body %}

    <section class="article">
        <div class="jumbotron">
            <h1 class="display-3">Votre article !</h1>
        </div>
        <article>
            <h2>{{ article.title }}</h2>
            <div class="metadata">   
                <img src="{{ article.image }}" />
                {{ article.content | raw }} 
                <p>{{ article.createdAt | date('d/m/Y') }}</p>
            </div>
        </article>
    </section>

{% endblock %}
